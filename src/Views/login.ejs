<%- include("./includes/head") %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <div class="display-1 text-center mb-3">Welcome!</div>
      <%- include("./includes/messages") %>
      <div class="row">
        <div class="col-lg">
          <h1>Sign In</h1>
          <p>If you don't have an account</p>
          <form action="/login/register" method="post" class="my-1">
          <input type="hidden" name="_csrf" value="<%=csrfToken %>" />
            <label>Email:</label>
            <input
              class="form-control my-1"
              type="email"
              name="email"
              required
            />
            <label>Password:</label>
            <input
              class="form-control my-2"
              type="password"
              name="senha"
              minlength="8"
              required
            />
            <button type="submit" class="btn btn-primary align-self-center">
              Sign In
            </button>
          </form>
        </div>
        <div class="col-lg">
          <h1>Login</h1>
          <p>If you have an account</p>
          <form action="/login/login" method="post" class="my-1">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <label>Email:</label>
            <input
              class="form-control my-1"
              type="email"
              name="email"
              required
            />
            <label>Password:</label>
            <input
              class="form-control my-2"
              type="password"
              name="senha"
              minlength="8"
              required
            />
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%-include("./includes/footer") %>
